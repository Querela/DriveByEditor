{
    "name": "DriveByEditor",
    "description": "Allow user to proof web page",
    "version": "0.1.0.0",
    "manifest_version": 2,
    "icons": {
    "16": "icon16.png"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "contentScript.js"
            ]
        }
    ],
    "permissions": [
        "contextMenus"
    ]
}